{
    "semi": false,
    "singleQuote": false,
    "singleAttributePerLine": true,
    "printWidth": 120,
    "plugins": [
        "prettier-plugin-organize-imports",
        "prettier-plugin-tailwindcss",
        "@prettier/plugin-php",
        "@shufo/prettier-plugin-blade"
    ],
    "tabWidth": 4,
    "overrides": [
        {
            "files": "**/*.yml",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
